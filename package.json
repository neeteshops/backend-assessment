{
    "name": "backend-assessment",
    "version": "1.0.0",
    "description": "Backend assessment for balance and transaction processing",
    "main": "dist/index.js",
    "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:server": "ts-node src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "docker:dev": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "db:init": "ts-node src/scripts/initTables.ts",
    "db:seed": "ts-node src/scripts/seedData.ts",
    "db:reset": "docker-compose down -v && docker-compose up --build",
    "setup": "npm install && npm run db:init && npm run db:seed",
    "clean": "rm -rf dist node_modules",
    "start:dynamodb": "docker run -d -p 8000:8000 --name dynamodb-local amazon/dynamodb-local"
  },
    "dependencies": {
      "@aws-sdk/client-dynamodb": "^3.450.0",
      "@aws-sdk/lib-dynamodb": "^3.450.0",
      "express": "^4.18.2",
      "uuid": "^9.0.0"
    },
    "devDependencies": {
      "@types/express": "^4.17.17",
      "@types/jest": "^29.5.5",
      "@types/node": "^20.4.5",
      "@types/uuid": "^9.0.2",
      "jest": "^29.6.1",
      "ts-jest": "^29.1.1",
      "ts-node": "^10.9.1",
      "typescript": "^5.1.6"
    }
  }